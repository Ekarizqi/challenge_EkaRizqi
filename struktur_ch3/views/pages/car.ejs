<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css" type="text/css">
</head>
<body>

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="container">
      <nav style="--bs-breadcrumb-divider: '>';;" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/car">Cars</a></li>
          <li class="breadcrumb-item active" aria-current="page">List Car</li>
        </ol>
      </nav>
      <h1 class="mt-4">List Car</h1>  
      <a class="btn btn-primary" href="/about" role="button">+ Add New Car</a>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <!-- <div class="col"> -->
              <% mobil.forEach(mo => { %>
                <div class="card">
                  <img src="<%= mo.img %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"> <%= mo.nama %>/<%= mo.tipe %></h5>
                    <h4 class="card-title"> <%= mo.price %>  </h4>
                    <p class="card-text"> <%= mo.startRent %> - <%= mo.finishRent %>  </p>
                    <p class="card-text"> <%= mo.updatedAt %>  </p>
                    <a href="#" class="btn btn-outline-danger"><i class="bi bi-trash3"></i>Delete</a>
                    <a href="#" class="btn btn-success" ><i class="bi bi-pencil-square"></i>Edit</a>
                  </div>
                  <!-- <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                    
                  </div> -->
                </div>
              <% }) %>
            <!-- </div> -->
          </div>
    </div>
</main>

</body>
</html>